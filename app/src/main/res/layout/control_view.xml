<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    android:gravity="bottom"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        
        android:orientation="horizontal"
        
        >
        <LinearLayout 
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout 
                
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                  <Button 
                android:id="@+id/con_up_btn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_up"
                />
                
                
            </LinearLayout>
             <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                  <Button 
                android:id="@+id/con_left_btn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_left"
                />
                   <Button 
                
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00ffffff"
                />
                      <Button 
                android:id="@+id/con_right_btn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_right"
                />
                 
             </LinearLayout>
              <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                    <Button 
                android:id="@+id/con_down_btn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_down"
                />
                   
              </LinearLayout>
             
        </LinearLayout>
        
        <View 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            
            />
         <LinearLayout 
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <Button 
                android:id="@+id/con_fire_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_fire"
                />
             
         </LinearLayout>
    </LinearLayout>

</LinearLayout>
